@model AgriculturalResourceManagement.Models.States
@{
    ViewData["Title"] = "States";
}

<h1>States</h1>

<div><b>States are displayed in the table below</b><br /></div>
<table class="table">
    <tr>
        <th>State Id </th>
        <th>State Code </th>
        <th>State Name </th>

    </tr>

    @foreach (var item in Model.data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.name)
            </td>
        </tr>


        
    }

</table>




<script>
    alertDbSave(@ViewBag.dbSuccessComp);
</script>
<div>
    <a id="dbopt" asp-controller="Home" asp-action="PopulateStates"><button type="button">Update</button></a>
</div>